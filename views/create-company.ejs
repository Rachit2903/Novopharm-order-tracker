<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Novopharm - Create Company</title>
    <!-- Favicon -->
    <link rel="icon" href="/cstm-assets/logo.svg" type="image/png" />
    <!-- Font Awesome 5 -->
    <link rel="stylesheet" href="/libs/@fortawesome/fontawesome-free/css/all.min.css" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Purpose CSS -->
    <link rel="stylesheet" href="/css/purpose.css" id="stylesheet" />
</head>

<body class="d-flex flex-column min-vh-100">
    <header class="header" id="header-main">
        <!-- Main navbar -->
        <%- include('partials/navbar'); %>
    </header>

    <div class="container mt-4 flex-grow-1">
        <form id="company-form">
            <div class="form-group">
                <label for="companyName">Company Name</label>
                <input type="text" class="form-control" name="companyName" required id="companyName"
                    placeholder="Enter the company name" />
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>

    <!-- Error Modal -->
    <div class="modal modal-danger" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="errorModal"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title h6" id="modal_title_6">Something went wrong</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="py-3 text-center">
                        <i class="fas fa-frown fa-4x"></i>
                        <h5 class="heading h4 mt-4">We're Sorry</h5>
                        <p>
                            Something went wrong while trying to process your request.
                            Kindly try again later.
                        </p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="window.location.reload(true)" class="btn btn-sm btn-white"
                        data-dismiss="modal">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Loading Modal -->
    <div class="modal" id="loadingModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="row justify-content-center">
                        <div class="col-auto">
                            <div class="spinner-grow text-primary" role="status">
                                <span class="sr-only">Loading...</span>
                            </div>
                            <div class="spinner-grow text-primary" role="status">
                                <span class="sr-only">Loading...</span>
                            </div>
                            <div class="spinner-grow text-primary" role="status">
                                <span class="sr-only">Loading...</span>
                            </div>
                        </div>
                    </div>
                    <div class="py-3 text-center">
                        <p>The Company is getting saved.</p>
                        <p class="font-weight-700">
                            Please wait, this might take a moment.....
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Modal -->
    <div class="modal modal-success" id="successModal" tabindex="-1" role="dialog" aria-labelledby="modal_success"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title h6" id="modal_title_6">Successful</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="py-3 text-center">
                        <i class="fas fa-check-circle fa-4x"></i>
                        <h5 class="heading h4 mt-4">Company Created Successfully</h5>
                        <p>
                            The company has been created successfully. You may close the
                            window now.
                        </p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="window.location.reload(true)" class="btn btn-sm btn-white"
                        data-dismiss="modal">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Present Modal -->
    <div class="modal modal-success" id="presentModal" tabindex="-1" role="dialog" aria-labelledby="modal_success"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title h6" id="modal_title_6">Successful</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="py-3 text-center">
                        <i class="fas fa-check-circle fa-4x"></i>
                        <h5 class="heading h4 mt-4">Company Already Exists</h5>
                        <p>
                            The company is already present. You may close the window now.
                        </p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="window.location.reload(true)" class="btn btn-sm btn-white"
                        data-dismiss="modal">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <%- include('partials/footer'); %>
    </footer>

    <!-- Bootstrap JS and other scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Page JS -->
    <script src="/libs/flatpickr/dist/flatpickr.min.js"></script>
    <script src="/libs/select2/dist/js/select2.min.js"></script>
    <script src="/libs/bootstrap-tagsinput/dist/bootstrap-tagsinput.min.js"></script>
    <!-- Purpose JS -->
    <script src="/js/purpose.js"></script>
    <!-- Demo JS - remove it when starting your project -->
    <script src="/js/demo.js"></script>
</body>


<script>
    // Submit form using AJAX
    const companyForm = document.getElementById("company-form");

    companyForm.addEventListener("submit", async (event) => {
        event.preventDefault();
        $("#loadingModal").modal("show");
        $("#successModal").modal("hide");
        $("#presentModal").modal("hide");
        $("#errorModal").modal("hide");

        try {
            const name = companyForm.companyName.value;
            const response = await fetch("/company/create", {
                method: "POST",
                headers: {
                    "Content-type": "application/json"
                },
                body: JSON.stringify({
                    name,
                })
            });
            const data = await response.json();

            if (data.id) {
                $("#loadingModal").modal("hide");
                $("#successModal").modal("show");
            } else if (data.message) {
                $("#loadingModal").modal("hide");
                $("#presentModal").modal("show");
            } else {
                $("#loadingModal").modal("hide");
                $("#errorModal").modal("show");
            }
        } catch (error) {
            console.log(error);
            $("#loadingModal").modal("hide");
            $("#errorModal").modal("show");
        }
    });
</script>

</html>